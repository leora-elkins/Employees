{{!< layout}}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h2>Update Employee</h2>
    <form action="/update/{{employee._id}}" method="post">
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName" value="{{employee.firstName}}" required><br>
        
        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName" value="{{employee.lastName}}" required><br>
        
        <label for="department">Department:</label>
        <select id="department" name="department" required>
            <option value="IT" {{eq employee.department "IT"}}>IT</option>
            <option value="HR" {{eq employee.department "HR"}}>HR</option>
            <option value="Finance" {{eq employee.department "Finance"}}>Finance</option>
            <option value="Sales" {{eq employee.department "Sales"}}>Sales</option>
            <option value="Operations" {{eq employee.department "Operations"}}>Operations</option>
            <option value="Legal" {{eq employee.department "Legal"}}>Legal</option>
            
        </select><br>
        
        <label for="startDate">Start Date:</label>
        <input type="date" id="startDate" name="startDate" value="{{formatDate employee.startDate}}" required><br>
        
        <label for="jobTitle">Job Title:</label>
        <input type="text" id="jobTitle" name="jobTitle" value="{{employee.jobTitle}}" required><br>
        
        <label for="salary">Salary:</label>
        <input type="number" id="salary" name="salary" value="{{employee.salary}}" required><br>
        
        <button type="submit">Submit</button>
    </form>
</body>
</html>
